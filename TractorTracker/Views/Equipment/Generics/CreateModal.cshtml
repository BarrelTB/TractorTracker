@model CoreViewModel<TractorTracker.Web.Models.Interfaces.IBaseInterface>



<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Form Popup</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal Body (Place your form inside this div) -->
            <div class="modal-body">
                <form action="@Url.Action("Update", "Equipment")" method="POST">
                    @foreach (var property in Model.BaseModel.GetType().GetProperties())
                    {
                        <div class="form-group">
                            <label asp-for="@property.Name">@property.Name</label>
                            <input asp-for="@property.Name" class="form-control" />
                            <span asp-validation-for="@property.Name" class="text-danger"></span>

                        </div>
                    }
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>

            <!-- Modal Footer (Optional) -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
